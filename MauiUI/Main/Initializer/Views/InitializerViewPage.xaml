<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:viewModel="clr-namespace:MauiUI.Main.Initializer.ViewModels"
    x:DataType="viewModel:InitializerViewModel"
    x:Class="MauiUI.Main.Initializer.Views.InitializerViewPage"
    Title="Initializer" BackgroundColor="Black">

    <Grid
        Padding="20"
        VerticalOptions="StartAndExpand"
        HorizontalOptions="Center"
        Margin="0,80,0,0">  
        <!-- Progress Indicator -->
        <ActivityIndicator
            IsRunning="{Binding IsBusy}" 
            Color="Aqua"
            VerticalOptions="Start" 
            HorizontalOptions="Center" />

        <!-- Initializer Message -->
        <StackLayout
            VerticalOptions="Center"
            HorizontalOptions="Center">
            <Label
                Text="{Binding StatusMessage}" 
                FontSize="Medium" 
                TextColor="Aqua"
                HorizontalTextAlignment="Center" 
                Margin="0,50,0,0"/>
        </StackLayout>
    </Grid>
</ContentPage>