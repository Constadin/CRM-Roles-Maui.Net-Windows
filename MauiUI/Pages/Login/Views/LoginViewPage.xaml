<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:viewModel="clr-namespace:MauiUI.Pages.Login.ViewModels"
    x:DataType="viewModel:LoginViewModel"
    x:Class="MauiUI.Pages.Login.Views.LoginViewPage"
    Title="Login">
    
    
    <Frame
        x:Name="frame"
        BorderColor="Transparent"
        CornerRadius="0"
        Padding="0"
        Margin="0,0"
        BackgroundColor="White">
        <VerticalStackLayout>
            <Entry
                x:Name="usernameEntry"
                Placeholder="Username"
                PlaceholderColor="Black"
                TextColor="Black"
                FontSize="18"
                Margin="0,20,0,0"
                Text="{Binding Username}"/>
            <Entry
                x:Name="passwordEntry"
                Placeholder="Password"
                PlaceholderColor="Black"
                IsPassword="True"
                TextColor="Black"
                FontSize="18"
                Margin="0,20,0,0"
                Text="{Binding Password}"/>
            <Button
                Text="Login"
                TextColor="Aqua"
                FontSize="20"
                Margin="0,20,0,0"
                Command="{Binding LoginCommand}"/>
        </VerticalStackLayout>
    </Frame>
</ContentPage>